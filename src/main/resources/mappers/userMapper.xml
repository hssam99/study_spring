<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koreait.www.repository.UserDAO">
    <insert id="insert">
        INSERT INTO user (email, pw, name)
        VALUES (#{email}, #{pw}, #{name})
    </insert>
    <insert id="insertAuth">
        INSERT INTO user_auth (email, auth)
        VALUES (#{email}, 'ROLE_USER')
    </insert>
    <select id="selectByEmail" resultType="UserVO">
        SELECT email, pw, name, reg_date, last_login
        FROM user
        WHERE email = #{email}
    </select>
    <select id="selectAuthByEmail" resultType="UserAuthVO">
        SELECT email, auth
        FROM user_auth
        WHERE email = #{email}
    </select>
    <update id="updateLastLogin">
        UPDATE user
        SET last_login = NOW()
        WHERE email = #{email}
    </update>
    <update id="modifyPwEmpty">
        UPDATE user
        SET name = #{name}
        WHERE email = #{email}
    </update>
    <update id="modify">
        UPDATE user
        SET pw   = #{pw},
            name = #{name}
        WHERE email = #{email}
    </update>
    <delete id="delete">
        DELETE FROM user
        WHERE email = #{email}
    </delete>

    <delete id="authDelete">
        DELETE FROM user_auth
        WHERE email = #{email}
    </delete>


    <select id="getList" resultType="UserVO">
        SELECT *
        FROM user
    </select>

</mapper>